extends ../../layout.jade
block content
   div(class="col-md-6 remove-float center-block  big-top-space ")
    h1 Editar imagen
    form(action="/app/imagenes/#{imagen.id}?_method=PUT",method="POST")
     div(class="form-group")
      label(for="title") Título
      input(type="text", name="title", value="#{imagen.title}", placeholder="Título de la imagen...",class="form-control", id="title")
     div(class="row top-space") 
      
      div(class="col-xs-12 col-sm-6")
        <button type="submit" class="btn btn-info">Guardar</button>